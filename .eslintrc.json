{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/jsx-no-constructed-context-values": "off",
        "react/prop-types": "off",
        "no-new-object": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": ["*config.{ts,tsx,js,jsx}"]
            }
        ]
    }
}
